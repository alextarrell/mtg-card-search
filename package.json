{
  "name": "mtg-card-search",
  "productName": "MTG Card Search",
  "version": "1.0.0",
  "description": "An Electron application to search through a digital mtg collection",
  "main": "main.js",
  "productName": "MTG Card Search",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-mac": "electron-forge make --platform darwin"
  },
  "repository": "",
  "keywords": [
    "mtg",
    "search",
    "tool",
    "app",
    "application"
  ],
  "author": "SteveMTG",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "latest"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "find": "^0.3.0"
  },
  "build": {
    "appId": "com.stevemtg.mtgcardsearch",
    "category": "app.category.type",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./build/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "mtg_card_search"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
